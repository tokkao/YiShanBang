<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_choose_goods_icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_default_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#333333"
            android:textSize="15sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Â¥"
                android:textColor="#F67617"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_shoose_goods_price"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#F67617"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_choose_goods_priced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_choose_goods_minus"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_minus_goods"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_choose_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_choose_goods_add"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_add_goods" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>