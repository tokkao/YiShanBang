<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingTop="15dp"
    android:paddingRight="13dp">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_img"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        app:corner_radius="3dp"
        android:src="@mipmap/empty_show" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_img"
        android:layout_alignBottom="@id/iv_img"
        android:layout_toRightOf="@id/iv_img"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="8dp"
                android:text="1.1km"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_distance"
                android:layout_toLeftOf="@id/tv_distance"
                android:text="多乐之日"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1"
            android:text="商家简介商家简介商家简介商家简，介商家简介商家"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sale_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="月销量：12304单"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_img"
        android:layout_marginTop="15dp"
        android:background="@color/view_line" />

</RelativeLayout>