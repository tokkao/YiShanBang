<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="13dp"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp">

        <ImageView
            android:id="@+id/iv_confirm_order"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_stores_details" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_confirm_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="草莓奶昔"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_confirm_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="大杯/无糖/常温"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm_order_count"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="51dp"
            android:gravity="center_vertical"
            android:text="x1"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_confirm_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=" ¥18"
            android:textColor="#F67617"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>