<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@drawable/shape_3dp_green_point" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_4dp_green_point" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_5dp_green_point" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="寻求帮扶"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_5dp_green_point" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_4dp_green_point" />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_3dp_green_point" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_eat_food"
                android:layout_width="108dp"
                android:layout_height="90dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_eat_food"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="吃美食"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_drink"
                android:layout_width="108dp"
                android:layout_height="90dp"
                android:layout_marginLeft="54dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_drink"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="喝一杯"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_look_movie"
                android:layout_width="108dp"
                android:layout_height="90dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_look_movice"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="看电影"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_k_song"
                android:layout_width="108dp"
                android:layout_height="90dp"
                android:layout_marginLeft="54dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_k_song"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="K歌"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_service_online"
                android:layout_width="108dp"
                android:layout_height="90dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_online"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="线上指导"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_service_home"
                android:layout_width="108dp"
                android:layout_height="90dp"
                android:layout_marginLeft="54dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_service_home"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="家政服务"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/civ_more"
                android:layout_width="108dp"
                android:layout_height="40dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/tv_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/color_333333"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_marginLeft="54dp"
                android:background="@color/color_FFFFFF" />
        </LinearLayout>
    </LinearLayout>


    <com.benben.commoncore.widget.badgeview.BGABadgeImageView
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_service_msg" />


</RelativeLayout>