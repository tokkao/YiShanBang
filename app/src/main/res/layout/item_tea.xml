<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/iv_tea_item"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="13dp"
            app:corner_radius="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tea_item_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="十里河店"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tea_item_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:text="1.1km"
                    android:textColor="@color/color_333333" />
            </RelativeLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="营业时间："
                   android:textColor="#666666"
                   android:textSize="13sp" />
               <TextView
                   android:id="@+id/tea_item_time_start"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="08:00"
                   android:textColor="#666666"
                   android:textSize="13sp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="-"
                   android:textColor="#666666"
                   android:textSize="13sp" />
               <TextView
                   android:id="@+id/tea_item_time_end"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:text="08:00"
                   android:textColor="#666666"
                   android:textSize="13sp" />
           </LinearLayout>


            <TextView
                android:id="@+id/tea_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:drawableLeft="@mipmap/navigation_icon"
                android:drawablePadding="10dp"
                android:text="北京市朝阳区南路劲松大厦底商"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="1dp"
        android:background="#E5E5E5" />
</LinearLayout>